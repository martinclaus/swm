FC = @FC@
FCFLAGS = @FCFLAGS@
FCFLAGS_f90 = @FCFLAGS_f90@
FC_MODEXT = @FC_MODEXT@
FC_MODINC = @FC_MODINC@
FC_MODOUT = @FC_MODOUT@
OBJEXT = @OBJEXT@
CPPFLAGS = @CPPFLAGS@
FC_DEFINE = @FC_DEFINE@

OPENMP_FCFLAGS = @OPENMP_FCFLAGS@

SED = @SED@
MKDIR = @MKDIR_P@

LIBOBJS = @LIBOBJS@

SET_MAKE = @SET_MAKE@

EXEEXT = @EXEEXT@

SHELL:=/bin/bash

srcdir = @srcdir@
prefix = $(CURDIR)/
bindir = $(prefix)bin/
builddir = $(prefix)build/
docdir = $(srcdir)/doc/
includedir = $(srcdir)/include/
sdir = $(srcdir)/src/
selfcheck_dir = $(srcdir)/selfcheck/
utest_dir = $(srcdir)/unit_tests/

VPATH = $(srcdir):$(sdir):$(includedir)

include_modelHeader = $(includedir)

bin_PROGRAMS = model$(EXEEXT)

O := $(OPENMP_FCFLAGS)
DEBUG = #-Wall #-g
FFLAGS = $(FCFLAGS) $(FCFLAGS_f90) $(defSelfCheck) $(DEBUG) $(O)
libnc = @NCLIB@ -lnetcdf -lnetcdff
includenc = $(FC_MODINC)@NCINC@
DOXYGEN = @DOXYGEN@

LDFLAGS = @LDFLAGS@ @LIBS@ $(libnc)

COMPILE = $(FC) $(FFLAGS) $(CPPFLAGS) $(defClElSolv) $(includenc) $(FC_MODINC)$(builddir) $(include_selfcheck) $(FC_MODINC)$(includedir) -c $< $(FC_MODOUT)$(builddir) -o$(builddir)$@

# conditional modules
ifeq ($(strip @ELSOLV@), SOR)
  $(info Elliptic solver used by calc_lib module: SOR)
  cl_elsolv := ElSolv_SOR
  cl_elsolv.$(OBJEXT) := ElSolv_SOR.$(OBJEXT)
  defClElSolv := $(FC_DEFINE)'CALC_LIB_ELLIPTIC_SOLVER=ElSolv_SOR'
  defClElSolv += $(FC_DEFINE)'CALC_LIB_ELLIPTIC_SOLVER_HEADER="ElSolv_SOR.h"'
else
  $(info Elliptic solver used by calc_lib module: none)
endif

objects = $(builddir)*.$(OBJEXT)

.PHONY: all clean clean-selfcheck clean-doc selfcheck doc distclean clean-conf

all     : $(bin_PROGRAMS)

$(builddir):
	$(MKDIR) $(builddir)

$(bindir):
	$(MKDIR) $(bindir)

model$(EXEEXT)   : $(modules:%=%.$(OBJEXT)) main_module.$(OBJEXT) $(bindir)
	$(FC) $(FFLAGS) -o$(bindir)$@ $(objects) $(LDFLAGS) $(libcu)

main_module.$(OBJEXT) : main_module.f90 app.$(OBJEXT) io_module.$(OBJEXT) io_netcdf.$(OBJEXT) vars_module.$(OBJEXT) domain_module.$(OBJEXT) calc_lib.$(OBJEXT) diag_module.$(OBJEXT) dynFromIo_module.$(OBJEXT) swm_module.$(OBJEXT) tracer_module.$(OBJEXT) model.h io.h
	$(COMPILE)

types.$(OBJEXT) : types.f90 types.h
	$(COMPILE)

init_vars.$(OBJEXT) : init_vars.f90 types.$(OBJEXT) model.h
	$(COMPILE)

vars_module.$(OBJEXT) : vars_module.f90 io.h types.$(OBJEXT) component_module.$(OBJEXT) domain_module.$(OBJEXT) logging.$(OBJEXT) generic_list.$(OBJEXT) grid_module.$(OBJEXT) str.$(OBJEXT)
	$(COMPILE)

time_integration_module.$(OBJEXT) : time_integration_module.f90 component_module.$(OBJEXT) vars_module.$(OBJEXT) io.h model.h types.$(OBJEXT)
	$(COMPILE)

f_udunits_2.$(OBJEXT) : f_udunits_2.f90 f_udunits_2.inc
	$(COMPILE)

calendar_module.$(OBJEXT) : calendar_module.f90 f_udunits_2.$(OBJEXT) io.h types.$(OBJEXT) logging.$(OBJEXT)
	$(COMPILE)

diag_module.$(OBJEXT) : diag_module.f90 io.h diag_module.h types.$(OBJEXT) logging.$(OBJEXT) component_module.$(OBJEXT) list_mod.$(OBJEXT) io_module.$(OBJEXT) calc_lib.$(OBJEXT) vars_module.$(OBJEXT) domain_module.$(OBJEXT) grid_module.$(OBJEXT) init_vars.$(OBJEXT) str.$(OBJEXT)
	$(COMPILE)

io_module.$(OBJEXT) : io_module.f90 io.h types.$(OBJEXT) component_module.$(OBJEXT) calendar_module.$(OBJEXT) grid_module.$(OBJEXT) logging.$(OBJEXT) list_mod.$(OBJEXT)
	$(COMPILE)

io_netcdf.$(OBJEXT) : io_netcdf.f90 io.h types.$(OBJEXT) logging.$(OBJEXT) component_module.$(OBJEXT) io_module.$(OBJEXT) grid_module.$(OBJEXT) calendar_module.$(OBJEXT) str.$(OBJEXT)
	$(COMPILE)

ElSolv_SOR.$(OBJEXT) : ElSolv_SOR.f90 ElSolv_SOR.h vars_module.$(OBJEXT) domain_module.$(OBJEXT) model.h types.$(OBJEXT) logging.$(OBJEXT)
	$(COMPILE)

tracer_module.$(OBJEXT) : tracer_module.f90 model.h types.$(OBJEXT) component_module.$(OBJEXT) logging.$(OBJEXT) domain_module.$(OBJEXT) vars_module.$(OBJEXT) io_module.$(OBJEXT) list_mod.$(OBJEXT) time_integration_module.$(OBJEXT) init_vars.$(OBJEXT)
	$(COMPILE)

calc_lib.$(OBJEXT) : calc_lib.f90 calc_lib.h component_module.$(OBJEXT) domain_module.$(OBJEXT) grid_module.$(OBJEXT) model.h $(cl_elsolv.$(OBJEXT)) types.$(OBJEXT) init_vars.$(OBJEXT) logging.$(OBJEXT)
	$(COMPILE)

dynFromIo_module.$(OBJEXT) : dynFromIo_module.f90 model.h io.h types.$(OBJEXT) logging.$(OBJEXT) component_module.$(OBJEXT) vars_module.$(OBJEXT) domain_module.$(OBJEXT) io_module.$(OBJEXT) calc_lib.$(OBJEXT) memchunk_module.$(OBJEXT)
	$(COMPILE)

memchunk_module.$(OBJEXT) : memchunk_module.f90 logging.$(OBJEXT) types.$(OBJEXT) init_vars.$(OBJEXT) io_module.$(OBJEXT) calc_lib.$(OBJEXT)
	$(COMPILE)

swm_module.$(OBJEXT) : swm_module.f90 model.h io.h types.$(OBJEXT) component_module.$(OBJEXT) logging.$(OBJEXT) domain_module.$(OBJEXT) vars_module.$(OBJEXT) io_module.$(OBJEXT) io_module.$(OBJEXT) calc_lib.$(OBJEXT) swm_vars.$(OBJEXT) swm_forcing_module.$(OBJEXT) swm_damping_module.$(OBJEXT) swm_timestep_module.$(OBJEXT)
	$(COMPILE)

swm_vars.$(OBJEXT) : swm_vars.f90 model.h types.$(OBJEXT) logging.$(OBJEXT) grid_module.$(OBJEXT) init_vars.$(OBJEXT)
	$(COMPILE)

swm_forcing_module.$(OBJEXT) : swm_forcing_module.f90 model.h io.h swm_module.h io.h types.$(OBJEXT) logging.$(OBJEXT) domain_module.$(OBJEXT) swm_vars.$(OBJEXT) vars_module.$(OBJEXT) io_module.$(OBJEXT) memchunk_module.$(OBJEXT) generic_list.$(OBJEXT) init_vars.$(OBJEXT) calc_lib.$(OBJEXT)
	$(COMPILE)

swm_timestep_module.$(OBJEXT) : swm_timestep_module.f90 model.h swm_module.h io.h types.$(OBJEXT) logging.$(OBJEXT) swm_vars.$(OBJEXT) calc_lib.$(OBJEXT) domain_module.$(OBJEXT) io_module.$(OBJEXT) vars_module.$(OBJEXT) memchunk_module.$(OBJEXT) swm_lateralmixing_module.$(OBJEXT) time_integration_module.$(OBJEXT) interp.inc
	$(COMPILE)

swm_damping_module.$(OBJEXT) : swm_damping_module.f90 model.h swm_module.h io.h types.$(OBJEXT) logging.$(OBJEXT) domain_module.$(OBJEXT) vars_module.$(OBJEXT) swm_vars.$(OBJEXT) init_vars.$(OBJEXT) str.$(OBJEXT) io_module.$(OBJEXT)
	$(COMPILE)

swm_lateralmixing_module.$(OBJEXT) : swm_lateralmixing_module.f90 model.h types.$(OBJEXT) logging.$(OBJEXT) domain_module.$(OBJEXT) vars_module.$(OBJEXT) swm_vars.$(OBJEXT) init_vars.$(OBJEXT) grid_module.$(OBJEXT)
	$(COMPILE)

domain_module.$(OBJEXT) : domain_module.f90 component_module.$(OBJEXT) model.h grid_module.$(OBJEXT) io_module.$(OBJEXT) io.h types.$(OBJEXT) init_vars.$(OBJEXT) logging.$(OBJEXT)
	$(COMPILE)

grid_module.$(OBJEXT) : grid_module.f90 model.h types.$(OBJEXT) logging.$(OBJEXT)
	$(COMPILE)

logging.$(OBJEXT) : logging.f90 io.h component_module.$(OBJEXT) str.$(OBJEXT) types.$(OBJEXT)
	$(COMPILE)

app.$(OBJEXT) : app.f90 list_mod.$(OBJEXT) component_module.$(OBJEXT) logging.$(OBJEXT)
	$(COMPILE)

component_module.$(OBJEXT) : component_module.f90
	$(COMPILE)

%.$(OBJEXT) : %.f90
	$(COMPILE)

include $(utest_dir)Makefile

include $(selfcheck_dir)Makefile


doc : doc/Doxyfile doc/html doc/latex
	@cd $(docdir) && $(DOXYGEN) $(<F)
	@cd $(docdir)/latex && $(MAKE)


# create folder if needed

include/  :
	mkdir -p $@

doc/html :
	mkdir -p $@

doc/latex :
	mkdir -p $@

distclean : clean clean-doc clean-conf clean-selfcheck

clean-conf:
	@rm -fv config.status
	@rm -fv config.log
	@rm -fv Makefile

clean :
	@rm -rfv $(builddir)*
	@rm -rfv $(bindir)*

clean-doc :
	@rm -rvf $(docdir)latex $(docdir)html $(docdir)doxygen_objdb_*

clean-selfcheck :
	@rm -rf $(selfcheck_dir)*/output/new_*
	@rm -rf $(selfcheck_dir)utest_str/utest_str
